# This is Git's per-user configuration file.
[url "git@github.com:glg-core/"]
	insteadof = glg-core://
[url "git@github.com:glg/"]
	insteadof = glg://
[url "git@github.com:cwebster2/"]
  insteadof = cwebster2://
[commit]
	gpgsign = true
