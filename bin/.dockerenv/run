docker run \
  -it --rm \
  --name dotfiles \
  --init \
  --group-add audio \
  --group-add video \
  --group-add docker \
  --privileged=true \
  -v /var/run/docker.sock:/var/run/docker.sock \
  -v $XAUTHORITY:/home/casey/.Xauthority \
  -v /home/casey/.ssh-persistant:/home/casey/.ssh-persistant \
  -e LASTPASS_USER \
  -e KEYME_SSH_CONFIG_ID \
  -e KEYME_KEYS_TO_LOAD \
  -e EMAIL \
  -e TERM \
  -e LANG \
  -e LC_ALL \
  --net=host \
  -e SNAPCRAFT_SETUP_CORE \
  dotfiles:v2
